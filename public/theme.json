{
  "version": 3,
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "settings": {
    "layout": {
      "contentSize": "736px",
      "wideSize": "736px"
    },
    "custom": {
      "color-primary": "#48625e",
      "color-background": "#efeded",
      "color-dark": "#212529",
      "color-muted": "##d6d6d6",
      "color-dim": "#00000090",
      "color-overlay": "#48625e50"
    },
    "color": {
      "custom": false,
      "customGradient": false,
      "gradients": [],
      "link": false,
      "defaultPalette": false,
      "defaultGradients": false,
      "duotone": []
    },
    "typography": {
      "fontFamilies": [
        {
          "name": "Lora",
          "slug": "content",
          "fontFamily": "Lora",
          "fontFace": [
            {
              "fontFamily": "Lora",
              "fontWeight": "400",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": [
                "file:./assets/fonts/Lora-Regular.woff2"
              ]
            },
            {
              "fontFamily": "Lora",
              "fontWeight": "400",
              "fontStyle": "italic",
              "fontStretch": "normal",
              "src": [
                "file:./assets/fonts/Lora-Italic.woff2"
              ]
            },
            {
              "fontFamily": "Lora",
              "fontWeight": "700",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": [
                "file:./assets/fonts/Lora-Bold.woff2"
              ]
            }
          ]
        },
        {
          "name": "Raleway",
          "slug": "regular",
          "fontFamily": "Raleway",
          "fontFace": [
            {
              "fontFamily": "Raleway",
              "fontWeight": "300",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": [
                "file:./assets/fonts/Raleway-Light.woff2"
              ]
            },
            {
              "fontFamily": "Raleway",
              "fontWeight": "400",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": [
                "file:./assets/fonts/Raleway-Regular.woff2"
              ]
            },
            {
              "fontFamily": "Raleway",
              "fontWeight": "600",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": [
                "file:./assets/fonts/Raleway-SemiBold.woff2"
              ]
            },
            {
              "fontFamily": "Raleway",
              "fontWeight": "700",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": [
                "file:./assets/fonts/Raleway-Bold.woff2"
              ]
            }
          ]
        }
      ],
      "customFontSize": false,
      "fontSizes": [],
      "fontStyle": false,
      "dropCap": false,
      "fluid": false,
      "letterSpacing": false,
      "fontWeight": false
    },
    "blocks": {
      "core/paragraph": {
        "typography": {
          "fontFamilies": []
        },
        "color": {
          "palette": []
        }
      },
      "kedr/help": {
        "color": {
          "palette": [
            {
              "name": "Полупрозрачный",
              "slug": "overlay",
              "color": "var(--wp--custom--color-overlay)"
            },
            {
              "name": "Альтернативный",
              "slug": "secondary",
              "color": "var(--wp--custom--color-background)"
            }
          ]
        }
      },
      "kedr/insertion": {
        "color": {
          "palette": [
            {
              "name": "Полупрозрачный",
              "slug": "overlay",
              "color": "var(--wp--custom--color-overlay)"
            },
            {
              "name": "Альтернативный",
              "slug": "secondary",
              "color": "var(--wp--custom--color-background)"
            }
          ]
        }
      }
    },
    "spacing": {
      "units": [
        "px",
        "em",
        "rem"
      ]
    }
  },
  "styles": {
    "typography": {
      "fontSize": "1.1875rem",
      "lineHeight": "1.5",
      "fontFamily": "var(--wp--preset--font-family--content)"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--regular)",
          "fontSize": "2rem",
          "lineHeight": "1.125"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--regular)",
          "fontSize": "1.875rem",
          "lineHeight": "1.125"
        },
        "spacing": {
          "margin": {
            "bottom": "0"
          }
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--regular)",
          "fontSize": "1.75rem"
        },
        "spacing": {
          "margin": {
            "bottom": "0"
          }
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--regular)",
          "fontSize": "1.5rem"
        },
        "spacing": {
          "margin": {
            "bottom": "0"
          }
        }
      },
      "h5": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--regular)",
          "fontSize": "1.375rem"
        },
        "spacing": {
          "margin": {
            "bottom": "0"
          }
        }
      },
      "h6": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--regular)",
          "fontSize": "1.1875rem"
        },
        "spacing": {
          "margin": {
            "bottom": "auto"
          }
        }
      },
      "caption": {
        "color": {
          "text": "var(--wp--custom--color-dim)"
        },
        "spacing": {
          "padding": {
            "top": "0.5rem"
          }
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--regular)",
          "fontSize": "0.8125rem"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--custom--color-primary)"
        },
        "border": {
          "bottom": {
            "width": "0.1075rem",
            "color": "var(--wp--custom--color-primary)",
            "style": "solid"
          }
        },
        "typography": {
          "textDecoration": "none"
        }
      }
    },
    "blocks": {
      "core/post-title": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--regular)"
        }
      },
      "core/list-item": {
        "spacing": {
          "margin": {
            "bottom": "0.5rem"
          }
        }
      },
      "core/quote": {
        "border": {
          "left": {
            "color": "var(--wp--custom--color-primary)",
            "width": "0.5rem",
            "style": "solid"
          }
        },
        "typography": {
          "fontSize": "1.5rem",
          "lineHeight": "1.4"
        },
        "spacing": {
          "margin": {
            "top": "2rem",
            "bottom": "2rem"
          },
          "padding": {
            "left": "2rem"
          }
        },
        "elements": {
          "cite": {
            "typography": {
              "fontSize": "1.125rem",
              "fontStyle": "normal",
              "fontWeight": "700",
              "fontFamily": "var(--wp--preset--font-family--regular)"
            }
          }
        }
      },
      "core/separator": {
        "color": {
          "background": "var(--wp--custom--color-background)"
        }
      },
      "core/image": {
        "border": {
          "radius": "0.3125rem"
        },
        "css": "&.alignleft {display: block; float:none; max-width:736px; margin-left:auto; margin-right:auto;} &.alignright {display: block; float:none; max-width:736px; margin-left:auto; margin-right:auto;} &.alignright img {margin-left: auto;} & figcaption {max-width:736px; margin:0 auto; text-align:left}"
      },
      "core/embed": {
        "css": "& figcaption {text-align: left}"
      },
      "core/gallery": {
        "css": "& figure.wp-block-image figcaption {flex: 0 0 auto; position:relative; background:none; color:var(--wp--custom--color-dim); text-align: left; padding: 0.5rem 0 0;}"
      },
      "core/post-content": {
        "spacing": {
          "padding": {
            "left": "1rem",
            "right": "1rem"
          }
        }
      },
      "core/details": {
        "color": {
          "text": "var(--wp--custom--color-dark)"
        },
        "spacing": {
          "padding": {
            "left": "1rem",
            "right": "1rem"
          }
        },
        "border": {
          "width": "0.125rem",
          "color": "var(--wp--custom--color-muted)",
          "radius": "0.3125rem"
        },
        "css": "& {box-sizing:border-box; border:solid 2px var(--wp--custom--color-muted);} & summary {display:flex; justify-content:center; padding:1rem 0; margin-bottom:0; font-family:var(--wp--preset--font-family--regular); font-weight:600;} & > * {margin-bottom:1rem}"
      },
      "core/media-text": {
        "color": {
          "background": "var(--wp--custom--color-background)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--regular)",
          "fontSize": "1rem"
        },
        "spacing": {
          "padding": {
            "left": "1.25em",
            "right": "1.25em"
          },
          "margin": {
              "top": "2em"
          }
        },
        "border": {
          "radius": "0.3125rem"
        },
        "css": "& {grid-gap: 1.25em; overflow: hidden} & > .wp-block-media-text__content {padding:0} & > .wp-block-media-text__media {margin: 1em 0} & > .wp-block-media-text__media img {border-radius:50%} &.is-image-fill > .editor-media-container__resizer {height: auto !important;}"
      },
      "core/heading": {
        "variations": {
          "separator": {
            "color": {
              "text": "#f0f"
            },
            "border": {
              "style": "solid 3px #f0f"
            }
          }
        }
      }
    }
  }
}
